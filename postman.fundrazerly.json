{
    "info": {
      "name": "URL Shortener API",
      "_postman_id": "d1d5e4ab-cd4e-4c3a-8b31-123456789abc",
      "description": "API collection for URL Shortener (without redirect endpoint)",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Shorten URL",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            },
            {
              "key": "Authorization",
              "value": "Bearer {{access_token}}",
              "description": "Optional: include JWT token if logged in"
            },
            {
              "key": "x-guest-id",
              "value": "{{guest_id}}",
              "description": "Optional: guest ID header if not logged in"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"originalUrl\": \"https://example.com/some/long/url\"\n}"
          },
          "url": {
            "raw": "{{base_url}}/urls/shorten",
            "host": [
              "{{base_url}}"
            ],
            "path": [
              "urls",
              "shorten"
            ]
          }
        },
        "response": []
      },
      {
        "name": "Get URLs",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{access_token}}",
              "description": "Optional: include JWT token if logged in"
            },
            {
              "key": "x-guest-id",
              "value": "{{guest_id}}",
              "description": "Optional: guest ID header if not logged in"
            }
          ],
          "url": {
            "raw": "{{base_url}}/urls",
            "host": [
              "{{base_url}}"
            ],
            "path": [
              "urls"
            ]
          }
        },
        "response": []
      }
    ],
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:3000"
      },
      {
        "key": "access_token",
        "value": ""
      },
      {
        "key": "guest_id",
        "value": ""
      }
    ]
  }
  